{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:9000",
    "distDir": "../../web/dist"
  },
  "package": {
    "productName": "QuickLook",
    "version": "1.0.0"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "fileAssociations": [
        {
          "ext": [
            "css",
            "js",
            "html",
            "zip",
            "txt",
            "log",
            "jpeg", "jpg", "png", "gif", "tiff", "tif", "webp", "ico", "heic", "svg", "bmp",
            "doc", "docx",
            "pdf",
            "xlsx", "xls",
            "json", "json5",
            "woff", "woff2", "ttf",
            "md", "pptx",
            "sql",
            "rs",
            "txt",
            "xml", "mathml", "ssml", "atom", "rss",
            "clike", "abap", "abnf", "actionscript", "php", "sh", "groovy", "c", "cpp", "vim", "toml",
            "yaml", "ts", "tsx", "npmrc", "lock"
          ]
        }
      ],
      "identifier": "QuickLookReporter",
      "icon": [
        "icons/32x32.svg",
        "icons/128x128.svg",
        "icons/128x128@2x.svg",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "fileDropEnabled": false,
        "fullscreen": false,
        "resizable": true,
        "title": "QuickLook",
        "minWidth": 800,
        "minHeight": 600,
        "width": 1024,
        "height": 960
      }
    ],
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "title": "QuickLook"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
